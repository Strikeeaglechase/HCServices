{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES6",
		"moduleResolution": "node",
		"module": "esnext",
		"allowSyntheticDefaultImports": true,
		"outDir": "dist/",
		"baseUrl": "./src",
		"lib": ["ES2019"],
		"paths": {
			"serviceLib/*": ["../../MicroserviceArch/serviceLib/dist/*"],
			"common/*": ["../../VTOLLiveViewerCommon/dist/*"],
		},
		"plugins": [
			{ "transform": "../MicroserviceArch/transformer/dist/serviceTransformer.js" },
			{ "transform": "typescript-transform-paths" },
			{ "transform": "typescript-transform-paths", "afterDeclarations": true }
		]
	},
	"include": ["src/"],
	"references": [{ "path": "../MicroserviceArch/serviceLib" }, { "path": "../VTOLLiveViewerCommon" }]
}